<!DOCTYPE html>
<html>
<head>
	<title>The Climbing App</title>
	<%- include('head.ejs') %>
</head>
<body>
	<%- include('signin.ejs') %>
	<div>The Climbing App</div>
	<div>
		<% for (var gym of gyms) { %>
			<p><a href="/gym/<%- gym.path %>"><%- gym.name %> | <%- gym.description %></a></p>
		<% } %>
	</div>
	<% if (common.user.is_admin) { %>
		<script type="text/javascript" src="/admin/index_admin.js"></script>
		<form id="new-gym-form">
			<p>New Gym</p>
			<p>path: <input name="path" type="text"></p>
			<p>name: <input name="name" type="text"></p>
			<p>description: <textarea name="description"></textarea></p>
			<input type="submit">
		</form>
	<% } %>
</body>
</html>
