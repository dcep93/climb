<!DOCTYPE html>
<html>
<head>
	<title><%= gym.name %> | <%= wall.name || wall.id %></title>
	<%- include('head.ejs') %>
	<script type="text/javascript" src="/wall.js"></script>
	<link rel="stylesheet" type="text/css" href="/gym.css">
</head>
<body>
    <%- include('signin.ejs') %>

    <div>
        <p>id: <%= wall.id %></p>
        <p>name: <%= wall.name %></p>
        <p>difficulty: <%= wall.difficulty %></p>
        <p>location: <%= wall.location %></p>
        <p>date: <%= wall.date._toDateString() %></p>
        <p>setter: <%= wall.setter %></p>
        <p>color: <%= wall.color %></p>
        <p>status: <%= wall.active ? 'active' : 'retired' %></p>
    </div>

    <div>
        <p>Videos</p>
        <br>
        <div>
            <p>New Video</p>
            <form id="new-video-form" enctype="multipart/form-data" method="post">
                <input type="file" name="upload">
                <input type="submit">
            </form>
        </div>
        <div>
            <% for (var m of media) { %>
                <div>
                    <p>id: <%= m.id %></p>
                    <p>url: <%= m.url %></p>
                    <p>status: <%= m.status %></p>
                    <p>media_type: <%= m.media_type %></p>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>